{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "next/core-web-vitals"
  ],
  "settings": {
    "import/resolver": {
      "alias": [
        ["@components", "./src/components"],
        ["@features", "./src/features"],
        ["@images", "./src/assets/images"],
        ["@styles", "./src/styles"]
      ]
    }
  }
}
